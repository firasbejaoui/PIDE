{% extends 'adminbase.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Foundation-Category Creation</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('adminhomepage') }}">Home</a></li>
                            <li class="breadcrumb-item active">Foundation-Category</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">New Foundation-Category</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            {{ form_start(form) }}
                            <div class="card-body">
                                <div class="form-group">
                                    <label>{{ form_label(form.type) }}</label>
                                    {{ form_widget(form.type,{'attr':{'class':'form-control' }}) }}
                                </div>
                            </div>
                            <div class="card-footer">
                                <input type="submit" class="btn btn-primary" value="Create" />
                            </div>
                            {{ form_end(form) }}

                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        })
    </script>
{% endblock %}