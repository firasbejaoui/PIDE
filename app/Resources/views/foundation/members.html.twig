{% extends 'adminbase.html.twig' %}

{% block stylesheets %}
    <!-- DataTables -->
    <link rel="stylesheet" href="{{ asset('backoffice/plugins/datatables-bs4/css/dataTables.bootstrap4.css') }}">
{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Members List</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('adminhomepage') }}">Home</a></li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Members</h3>
                            </div>
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>User</th>
                                        <th>Foundation</th>
                                        <th>Status</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for member in membres %}
                                        <tr>
                                            <td>{{ member.id}}</td>
                                            <td>{{ member.user.firstName}} {{ member.user.lastName}}</td>
                                            <td>{{ member.foundation.Noun}}</td>
                                            <td>{% if member.status == true %} Member {% else %} <a href="{{ path('approuve_foundation',{'id':member.id}) }}" class="btn btn-success">Approuve</a> {% endif %}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>User</th>
                                        <th>Foundation</th>
                                        <th>Status</th>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script src="{{ asset('backoffice/plugins/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables-bs4/js/dataTables.bootstrap4.js') }}"></script>
    <script>
        $(function () {
            $("#example1").DataTable();
        });
    </script>
{% endblock %}