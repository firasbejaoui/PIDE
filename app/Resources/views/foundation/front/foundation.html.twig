{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- DataTables -->
    <link rel="stylesheet" href="{{ asset('backoffice/plugins/datatables-bs4/css/dataTables.bootstrap4.css') }}">
{% endblock %}

{% block body %}

    <div class="breadcrumb-area pt-240 pb-125" style="background-image:url({{ asset('assets/img/bg/breadcrumb.jpg') }});" data-overlay="5">
        <div class="container">
            <div class="breadcrumb-text text-center z-index">
                <h2>Foundation details</h2>
            </div>
        </div>
    </div>

    <!-- breadcrumb end -->
    <!-- event area start -->
    <div class="event-all-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="event-left-sidebar">
                        <img src="{{ vich_uploader_asset(foundation, 'imageFile') }}" alt="">
                        <div class="event-text">
                            <h3>{{foundation.noun}}</h3>
                            <span>{{ foundation.categorie }} </span>
                            {% if ismember == true %}
                                {% if member.status == true %}
                                <a href="{{ path('join_foundation',{'id':foundation.id}) }}" class="btn btn-danger">Cancel Membership</a>
                                    {% else %}
                                        <a href="#" disabled class="btn btn-warning">Your Request is waiting for admin confirmation</a>
                                        {% endif %}
                            {% else %}
                                <a href="{{ path('join_foundation',{'id':foundation.id}) }}" class="btn btn-success">Become Member</a>
                            {% endif %}
                            <p>{{ foundation.description }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="event-map-info">
                        <div class="event-map">
                            <div id="hastech"></div>
                        </div>
                        <div class="eventpage-info">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- DataTables -->
    <script src="{{ asset('backoffice/plugins/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables-bs4/js/dataTables.bootstrap4.js') }}"></script>

{% endblock %}